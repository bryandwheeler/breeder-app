rules_version = '2';

// Firebase Storage Security Rules for Breeder App
service firebase.storage {
  match /b/{bucket}/o {

    // User's private folder - only they can read/write
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Website images - users can read/write their own website images
    match /users/{userId}/website/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 50 * 1024 * 1024  // 50MB max for images
                   && request.resource.contentType.matches('image/.*');
    }

    // Specific validation for vet visit attachments
    match /users/{userId}/vet-visits/{dogId}/{visitId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024  // 10MB max
                   && request.resource.contentType.matches('image/.*|application/pdf|application/msword|application/vnd.openxmlformats-officedocument.wordprocessingml.document|text/plain|message/rfc822|application/vnd.ms-outlook');
    }

    // SignNow contract documents - PDFs for e-signature contracts
    match /contracts/{contractId}/{fileName} {
      // Only authenticated users can read contracts they own (checked at app level)
      allow read: if request.auth != null;
      // Only allow PDF uploads, max 20MB
      allow write: if request.auth != null
                   && request.resource.size < 20 * 1024 * 1024  // 20MB max
                   && request.resource.contentType == 'application/pdf';
    }

    // Contract templates - PDF templates uploaded by breeders
    match /users/{userId}/contract-templates/{templateId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 20 * 1024 * 1024  // 20MB max
                   && request.resource.contentType == 'application/pdf';
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
