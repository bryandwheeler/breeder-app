rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    // Returns false if user document doesn't exist (new users)
    function isAdmin() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user is support staff (or admin)
    function isSupport() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'support'];
    }

    // Helper function to check if user is moderator (or admin)
    function isModerator() {
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'moderator'];
    }

    // ============================================================================
    // Staff Permission Helper Functions
    // ============================================================================

    // Helper function to get staff member document ID
    // Staff member documents use compound ID: {staffUserId}_{breederId}
    function getStaffMemberId(staffUserId, breederId) {
      return staffUserId + '_' + breederId;
    }

    // Helper function to check if user is authorized staff for a breeder
    function isAuthorizedStaff(breederId) {
      let staffDocId = getStaffMemberId(request.auth.uid, breederId);
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/staffMembers/$(staffDocId)) &&
             get(/databases/$(database)/documents/staffMembers/$(staffDocId)).data.status == 'accepted';
    }

    // Helper function to check if user has a specific staff permission
    function hasStaffPermission(breederId, permission) {
      let staffDocId = getStaffMemberId(request.auth.uid, breederId);
      return isAuthorizedStaff(breederId) &&
             get(/databases/$(database)/documents/staffMembers/$(staffDocId)).data.permissions[permission] == true;
    }

    // Helper function to check if user is owner OR has staff permission
    function isOwnerOrHasStaffPermission(breederId, permission) {
      return request.auth.uid == breederId ||
             isAdmin() ||
             hasStaffPermission(breederId, permission);
    }

    // ============================================================================
    // Staff Management Collections
    // ============================================================================

    // Staff Members - links users to breeders with permissions
    // Document ID format: {staffUserId}_{breederId}
    match /staffMembers/{memberId} {
      // Read - breeder can see their staff, staff member can see their memberships
      allow read: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        resource.data.staffUserId == request.auth.uid ||
        isAdmin()
      );

      // Create - only the breeder can add staff to their kennel
      allow create: if isAuthenticated() &&
        request.resource.data.breederId == request.auth.uid;

      // Update - breeder can update their staff members (permissions, status, etc.)
      allow update: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        // Staff member can update lastActiveAt
        (resource.data.staffUserId == request.auth.uid &&
         request.resource.data.breederId == resource.data.breederId &&
         request.resource.data.staffUserId == resource.data.staffUserId)
      );

      // Delete - only the breeder or admin can remove staff
      allow delete: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        isAdmin()
      );
    }

    // Staff Invitations - pending invitations to join a kennel
    match /staffInvitations/{invitationId} {
      // Read - breeder can see invitations they sent, invitee can see invitations sent to them
      allow read: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        resource.data.email == request.auth.token.email ||
        isAdmin()
      );

      // Create - only the breeder can send invitations
      allow create: if isAuthenticated() &&
        request.resource.data.breederId == request.auth.uid;

      // Update - breeder can cancel/modify, invitee can accept/decline
      allow update: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        resource.data.email == request.auth.token.email
      );

      // Delete - only the breeder or admin can delete invitations
      allow delete: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        isAdmin()
      );
    }

    // Staff Audit Logs - track staff actions for accountability
    match /staffAuditLogs/{logId} {
      // Read - only the breeder can view audit logs
      allow read: if isAuthenticated() &&
        resource.data.breederId == request.auth.uid;

      // Create - breeder or authorized staff can create logs
      allow create: if isAuthenticated() && (
        request.resource.data.breederId == request.auth.uid ||
        isAuthorizedStaff(request.resource.data.breederId)
      );

      // Update/Delete - audit logs are immutable
      allow update, delete: if false;
    }

    // Dogs collection - users can read all dogs (for search), admins can read all for analytics
    // Staff with canViewDogs permission can also read, canEditDogs to update, etc.
    match /dogs/{dogId} {
      // Allow reading all dogs for authenticated users (for search functionality)
      allow read: if isAuthenticated();

      // Allow creating if the userId matches the authenticated user, admin, or staff with permission
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        isAdmin() ||
        hasStaffPermission(request.resource.data.userId, 'canCreateDogs')
      );

      // Allow updating own dogs, admin, or staff with permission
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin() ||
        hasStaffPermission(resource.data.userId, 'canEditDogs')
      );

      // Allow deleting own dogs, admin, or staff with permission
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin() ||
        hasStaffPermission(resource.data.userId, 'canDeleteDogs')
      );
    }

    // Litters collection - users can only read/write their own litters, admins and staff can access
    match /litters/{litterId} {
      // Allow reading litters for owner, admin, or staff with permission
      allow read: if isAuthenticated() && (
        isAdmin() ||
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canViewLitters')
      );

      // Allow creating litters for owner, admin, or staff with permission
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        isAdmin() ||
        hasStaffPermission(request.resource.data.userId, 'canCreateLitters')
      );

      // Allow updating litters for owner, admin, or staff with permission
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin() ||
        hasStaffPermission(resource.data.userId, 'canEditLitters')
      );

      // Allow deleting litters for owner, admin, or staff with permission
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin() ||
        hasStaffPermission(resource.data.userId, 'canDeleteLitters')
      );

      // Puppies subcollection
      match /puppies/{puppyId} {
        allow read: if isAuthenticated() && (
          isAdmin() ||
          get(/databases/$(database)/documents/litters/$(litterId)).data.userId == request.auth.uid ||
          hasStaffPermission(get(/databases/$(database)/documents/litters/$(litterId)).data.userId, 'canViewLitters')
        );
        allow create: if isAuthenticated() && (
          get(/databases/$(database)/documents/litters/$(litterId)).data.userId == request.auth.uid ||
          isAdmin() ||
          hasStaffPermission(get(/databases/$(database)/documents/litters/$(litterId)).data.userId, 'canManagePuppies')
        );
        allow update: if isAuthenticated() && (
          get(/databases/$(database)/documents/litters/$(litterId)).data.userId == request.auth.uid ||
          isAdmin() ||
          hasStaffPermission(get(/databases/$(database)/documents/litters/$(litterId)).data.userId, 'canManagePuppies')
        );
        allow delete: if isAuthenticated() && (
          get(/databases/$(database)/documents/litters/$(litterId)).data.userId == request.auth.uid ||
          isAdmin() ||
          hasStaffPermission(get(/databases/$(database)/documents/litters/$(litterId)).data.userId, 'canDeleteLitters')
        );

        // Evaluations subcollection under puppies
        match /evaluations/{evaluationId} {
          allow read: if isAuthenticated() && (isAdmin() || resource.data.userId == request.auth.uid);
          allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
          allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
          allow delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
        }
      }
    }

    // Breeder profiles - users can read all profiles (for search) but only write their own
    match /breederProfiles/{profileId} {
      allow read: if isAuthenticated();
      // Allow create if the userId in the document matches the authenticated user
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Allow update if the existing document's userId matches the authenticated user
      // OR if updating own profile using the profileId pattern (userId as document ID)
      allow update: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || profileId == request.auth.uid);
      allow delete: if isAuthenticated() &&
        (resource.data.userId == request.auth.uid || profileId == request.auth.uid);
    }

    // Dog connection requests - users can read requests they sent or received
    match /dogConnectionRequests/{requestId} {
      allow read: if isAuthenticated() &&
        (resource.data.requesterId == request.auth.uid ||
         resource.data.ownerId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.requesterId == request.auth.uid;
      allow update: if isAuthenticated() &&
        (resource.data.ownerId == request.auth.uid ||
         resource.data.requesterId == request.auth.uid);
      allow delete: if isAuthenticated() && resource.data.requesterId == request.auth.uid;
    }

    // Notifications - users can only read/write their own notifications
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Heat cycles - users can only read/write their own heat cycle records
    // Staff with health record permissions can also access
    match /heatCycles/{cycleId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canViewHealthRecords')
      );
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        hasStaffPermission(request.resource.data.userId, 'canAddHealthRecords')
      );
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canEditHealthRecords')
      );
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canDeleteHealthRecords')
      );
    }

    // Breeding records - users can only read/write their own breeding records
    // Staff with health record permissions can also access
    match /breedingRecords/{recordId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canViewHealthRecords')
      );
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        hasStaffPermission(request.resource.data.userId, 'canAddHealthRecords')
      );
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canEditHealthRecords')
      );
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canDeleteHealthRecords')
      );
    }

    // Inquiries - users can only read/write their own inquiries
    // Staff with inquiry permissions can also access
    match /inquiries/{inquiryId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canViewInquiries')
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canManageInquiries')
      );
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canManageInquiries')
      );
    }

    // Waitlist entries - users can only read/write their own waitlist entries
    // Staff with waitlist permissions can also access
    match /waitlistEntries/{entryId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canViewWaitlist')
      );
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canManageWaitlist')
      );
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canManageWaitlist')
      );
    }

    // Care templates - users can only read/write their own care templates
    // Document ID is the userId
    match /careTemplates/{userId} {
      allow read: if isAuthenticated() && userId == request.auth.uid;
      allow write: if isAuthenticated() && userId == request.auth.uid;
    }

    // Breeders collection with settings subcollection
    // Staff can read breeder profile if they have any authorized role
    match /breeders/{breederId} {
      allow read: if isAuthenticated() && (
        breederId == request.auth.uid ||
        isAuthorizedStaff(breederId)
      );
      // Only breeder can write their own breeder document
      allow write: if isAuthenticated() && breederId == request.auth.uid;

      // Settings subcollection (includes waitlistFormConfig)
      match /settings/{settingId} {
        // Allow public read for waitlistFormConfig (for public waitlist forms)
        allow read: if true;
        // Only breeder can write their settings, or staff with canAccessSettings
        allow write: if isAuthenticated() && (
          breederId == request.auth.uid ||
          hasStaffPermission(breederId, 'canAccessSettings')
        );
      }
    }

    // Testimonials - users can read all approved testimonials, but only write their own
    match /testimonials/{testimonialId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Waitlist (public submissions) - anyone can create, only owner can read/update/delete
    // Staff with waitlist permissions can also access
    match /waitlist/{waitlistId} {
      allow read: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canViewWaitlist')
      );
      allow create: if true; // Public can submit
      allow update: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canManageWaitlist')
      );
      allow delete: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canManageWaitlist')
      );
    }

    // Connection requests - users can read requests they sent or received
    match /connectionRequests/{requestId} {
      allow read: if isAuthenticated() &&
        (resource.data.requesterId == request.auth.uid ||
         resource.data.ownerId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.requesterId == request.auth.uid;
      allow update: if isAuthenticated() &&
        (resource.data.ownerId == request.auth.uid ||
         resource.data.requesterId == request.auth.uid);
      allow delete: if isAuthenticated() && resource.data.requesterId == request.auth.uid;
    }

    // Stud jobs - users can only read/write their own stud jobs
    // Staff with stud job permissions can also access
    match /studJobs/{jobId} {
      // Allow reading stud jobs (both get and list operations)
      // For list operations with where() clauses, Firestore ensures the query matches the security rule
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canViewStudJobs')
      );

      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        hasStaffPermission(request.resource.data.userId, 'canManageStudJobs')
      );
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canManageStudJobs')
      );
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canManageStudJobs')
      );
    }

    // CRM Customers - users can only read/write their own customers, admins can read all
    // Staff with customer permissions can also access
    match /customers/{customerId} {
      allow read: if isAuthenticated() && (
        isAdmin() ||
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canViewCustomers')
      );
      allow create: if isAuthenticated() && (
        request.resource.data.breederId == request.auth.uid ||
        hasStaffPermission(request.resource.data.breederId, 'canCreateCustomers')
      );
      allow update: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canEditCustomers')
      );
      allow delete: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canDeleteCustomers')
      );
    }

    // CRM Customer segments - users can only read/write their own segments
    // Staff with customer permissions can also access
    match /customerSegments/{segmentId} {
      allow read: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canViewCustomers')
      );
      allow create: if isAuthenticated() && (
        request.resource.data.breederId == request.auth.uid ||
        hasStaffPermission(request.resource.data.breederId, 'canCreateCustomers')
      );
      allow update: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canEditCustomers')
      );
      allow delete: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canDeleteCustomers')
      );
    }

    // CRM Referrals - users can only read/write their own referrals
    // Staff with customer permissions can also access
    match /referrals/{referralId} {
      allow read: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canViewCustomers')
      );
      allow create: if isAuthenticated() && (
        request.resource.data.breederId == request.auth.uid ||
        hasStaffPermission(request.resource.data.breederId, 'canCreateCustomers')
      );
      allow update: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canEditCustomers')
      );
      allow delete: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        hasStaffPermission(resource.data.breederId, 'canDeleteCustomers')
      );
    }

    // User profiles - users can read/write their own profile, admins can list and update all
    // Note: We DON'T call isAdmin() in get operations to avoid circular dependency during user creation
    match /users/{userId} {
      // Allow users to read their own profile
      allow get: if isAuthenticated() && userId == request.auth.uid;

      // Allow authenticated users to list users (for breeder search in community)
      // Allow admins to list all users (for admin dashboard)
      allow list: if isAuthenticated();

      // Allow users to create their own profile
      allow create: if isAuthenticated() && userId == request.auth.uid;

      // Allow users to update their own profile, admins can update any profile
      allow update: if isAuthenticated() && (userId == request.auth.uid || isAdmin());

      // Disable user deletion
      allow delete: if false;
    }

    // Admin settings - only admins can read/write
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }

    // Website settings - users can only read/write their own website settings
    // Staff need canAccessSettings permission since this is a settings area
    match /websiteSettings/{userId} {
      allow read: if isAuthenticated() && (
        isOwner(userId) ||
        isAdmin() ||
        hasStaffPermission(userId, 'canAccessSettings')
      );
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && (
        isOwner(userId) ||
        hasStaffPermission(userId, 'canAccessSettings')
      );
      allow delete: if isAuthenticated() && isOwner(userId);
    }

    // Email integrations - users can only read/write their own email settings
    // NOTE: Access tokens are sensitive - handle with care in production
    match /emailIntegrations/{userId} {
      allow read: if isAuthenticated() && userId == request.auth.uid;
      allow create: if isAuthenticated() && userId == request.auth.uid && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && userId == request.auth.uid && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && userId == request.auth.uid && resource.data.userId == request.auth.uid;
    }

    // Email templates - users can only read/write their own email templates
    match /emailTemplates/{templateId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Workflows - users can only read/write their own workflows
    match /workflows/{workflowId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Scheduled emails - users can only read/write their own scheduled emails
    match /scheduledEmails/{emailId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Workflow execution logs - users can only read their own execution logs
    match /workflowExecutionLogs/{logId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Litter care and workflow tasks - scoped to breeder
    // Staff with task permissions can also access
    match /litterTasks/{taskId} {
      // Breeder (or admin) can read their own litter tasks
      // Staff with canViewTasks permission can also read
      allow read: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        isAdmin() ||
        hasStaffPermission(resource.data.breederId, 'canViewTasks')
      );

      // Creating tasks (e.g., from templates) must set breederId to the caller
      // Staff with canManageTasks permission can also create
      allow create: if isAuthenticated() && (
        request.resource.data.breederId == request.auth.uid ||
        hasStaffPermission(request.resource.data.breederId, 'canManageTasks')
      );

      // Updating tasks - breeder, admin, or staff with canManageTasks or canCompleteTasks
      allow update: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        isAdmin() ||
        hasStaffPermission(resource.data.breederId, 'canManageTasks') ||
        hasStaffPermission(resource.data.breederId, 'canCompleteTasks')
      );

      // Deleting tasks - breeder, admin, or staff with canManageTasks
      allow delete: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        isAdmin() ||
        hasStaffPermission(resource.data.breederId, 'canManageTasks')
      );
    }

    // Audit logs - any authenticated user can write logs, only admins can read
    match /audit_logs/{logId} {
      // Allow any authenticated user to create audit log entries
      allow create: if isAuthenticated();

      // Only admins can read audit logs (for Admin > Audit Logs viewer)
      allow read: if isAdmin();

      // Prevent client-side updates or deletions of audit logs
      allow update, delete: if false;
    }

    // Default task templates - admin-managed templates for litter care tasks
    // Structure: defaultTaskTemplates/{type}/tasks/{taskId}
    match /defaultTaskTemplates/{type} {
      // Allow admins full access to the type documents (weekly/daily)
      allow read, write: if isAdmin();

      // Subcollection for the actual task documents
      match /tasks/{taskId} {
        allow read, write: if isAdmin();
      }
    }

    // ============================================================================
    // Newsletter & Email Marketing Collections
    // ============================================================================

    // Newsletter lists - admin only for platform newsletter, breeders for their own
    match /newsletterLists/{listId} {
      allow read: if isAuthenticated() && (isAdmin() || resource.data.ownerId == request.auth.uid);
      allow create: if isAuthenticated() && (isAdmin() || request.resource.data.ownerId == request.auth.uid);
      allow update, delete: if isAuthenticated() && (isAdmin() || resource.data.ownerId == request.auth.uid);
    }

    // Newsletter subscribers - admin only for platform subscribers
    match /newsletterSubscribers/{subscriberId} {
      allow read, write: if isAdmin();
    }

    // Email campaigns - admin for platform campaigns, breeders for their own
    match /emailCampaigns/{campaignId} {
      allow read: if isAuthenticated() &&
        (isAdmin() || (resource.data.ownerType == 'breeder' && resource.data.ownerId == request.auth.uid));
      allow create: if isAuthenticated() &&
        (isAdmin() || (request.resource.data.ownerType == 'breeder' && request.resource.data.ownerId == request.auth.uid));
      allow update, delete: if isAuthenticated() &&
        (isAdmin() || (resource.data.ownerType == 'breeder' && resource.data.ownerId == request.auth.uid));
    }

    // Autoresponder sequences - admin for platform sequences, breeders for their own
    match /autoresponderSequences/{sequenceId} {
      allow read: if isAuthenticated() &&
        (isAdmin() || (resource.data.ownerType == 'breeder' && resource.data.ownerId == request.auth.uid));
      allow create: if isAuthenticated() &&
        (isAdmin() || (request.resource.data.ownerType == 'breeder' && request.resource.data.ownerId == request.auth.uid));
      allow update, delete: if isAuthenticated() &&
        (isAdmin() || (resource.data.ownerType == 'breeder' && resource.data.ownerId == request.auth.uid));
    }

    // Autoresponder emails (sequence steps)
    match /autoresponderEmails/{emailId} {
      // Need to check parent sequence ownership - simplified to admin + authenticated for now
      allow read, write: if isAuthenticated();
    }

    // Subscriber sequence progress - managed by cloud functions
    match /subscriberSequenceProgress/{progressId} {
      allow read: if isAdmin();
      allow write: if false; // Only cloud functions should write
    }

    // Lead magnets - admin for platform resources, breeders for their own
    match /leadMagnets/{magnetId} {
      allow read: if isAuthenticated() &&
        (isAdmin() || (resource.data.ownerType == 'breeder' && resource.data.ownerId == request.auth.uid));
      allow create: if isAuthenticated() &&
        (isAdmin() || (request.resource.data.ownerType == 'breeder' && request.resource.data.ownerId == request.auth.uid));
      allow update, delete: if isAuthenticated() &&
        (isAdmin() || (resource.data.ownerType == 'breeder' && resource.data.ownerId == request.auth.uid));
    }

    // Signup forms - admin for platform forms, breeders for their own
    match /signupForms/{formId} {
      // Public read for rendering embedded forms
      allow get: if true;
      allow list: if isAuthenticated() &&
        (isAdmin() || resource.data.ownerId == request.auth.uid);
      allow create: if isAuthenticated() &&
        (isAdmin() || request.resource.data.ownerId == request.auth.uid);
      allow update, delete: if isAuthenticated() &&
        (isAdmin() || resource.data.ownerId == request.auth.uid);
    }

    // Email events (analytics) - admin only read, cloud functions write
    match /emailEvents/{eventId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated(); // Cloud functions via admin SDK bypass rules
      allow update, delete: if false;
    }

    // Newsletter templates - public templates readable by all, custom by owner
    match /newsletterTemplates/{templateId} {
      allow read: if isAuthenticated() &&
        (resource.data.isPublic == true || isAdmin() || resource.data.ownerId == request.auth.uid);
      allow create: if isAuthenticated() &&
        (isAdmin() || request.resource.data.ownerId == request.auth.uid);
      allow update, delete: if isAuthenticated() &&
        (isAdmin() || resource.data.ownerId == request.auth.uid);
    }

    // Import jobs - owner only
    match /importJobs/{jobId} {
      allow read: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if false; // Managed by cloud functions
    }

    // Export jobs - owner only
    match /exportJobs/{jobId} {
      allow read: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if false; // Managed by cloud functions
    }

    // ============================================================================
    // Forum Collections
    // ============================================================================

    // Forum categories - all authenticated users can read, only admins can write
    match /forumCategories/{categoryId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAdmin();
    }

    // Forum threads - all authenticated users can read, authors and moderators can edit/delete
    match /forumThreads/{threadId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        (resource.data.authorId == request.auth.uid || isAdmin() || isModerator());
      allow delete: if isAuthenticated() &&
        (resource.data.authorId == request.auth.uid || isAdmin() || isModerator());
    }

    // Forum posts - all authenticated users can read, authors and moderators can edit/delete
    match /forumPosts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() &&
        (resource.data.authorId == request.auth.uid || isAdmin() || isModerator());
      allow delete: if isAuthenticated() &&
        (resource.data.authorId == request.auth.uid || isAdmin() || isModerator());
    }

    // Forum user profiles - all authenticated users can read, users can write their own
    match /forumUserProfiles/{userId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() && userId == request.auth.uid;
      allow delete: if isAuthenticated() && (userId == request.auth.uid || isAdmin());
    }

    // ============================================================================
    // Breeder Social Network Collections
    // ============================================================================

    // Breeder friendships - users can read/write friendships they are part of
    match /breederFriendships/{friendshipId} {
      // Allow list queries (the where clause in queries limits results)
      // Allow get if user is part of the friendship
      allow list: if isAuthenticated();
      allow get: if isAuthenticated() &&
        (resource.data.requesterId == request.auth.uid ||
         resource.data.recipientId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.requesterId == request.auth.uid;
      allow update: if isAuthenticated() &&
        (resource.data.requesterId == request.auth.uid ||
         resource.data.recipientId == request.auth.uid);
      allow delete: if isAuthenticated() &&
        (resource.data.requesterId == request.auth.uid ||
         resource.data.recipientId == request.auth.uid);
    }

    // Breeder conversations - participants can read/write their conversations
    match /breederConversations/{conversationId} {
      // Allow list for authenticated users (query filters by participants)
      allow list: if isAuthenticated();
      allow get: if isAuthenticated() &&
        request.auth.uid in resource.data.participants;
      allow create: if isAuthenticated() &&
        request.auth.uid in request.resource.data.participants;
      allow update: if isAuthenticated() &&
        request.auth.uid in resource.data.participants;
      allow delete: if false; // Don't allow conversation deletion

      // Messages subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() &&
          request.resource.data.senderId == request.auth.uid;
        allow update: if isAuthenticated() &&
          (resource.data.senderId == request.auth.uid ||
           resource.data.recipientId == request.auth.uid);
        allow delete: if false; // Don't allow message deletion
      }
    }

    // Admin settings documents (platform email, etc.)
    match /adminSettings/{settingId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // ============================================================================
    // Ticketing System Collections
    // ============================================================================

    // Support tickets - submitters can see their own, support/admin can see all
    match /tickets/{ticketId} {
      // List queries - support sees all, users see their own
      allow list: if isAuthenticated() && (
        isSupport() ||
        isAdmin()
      );

      // Get - submitter can see their own, support/admin can see all
      allow get: if isAuthenticated() && (
        resource.data.submitterId == request.auth.uid ||
        isSupport() ||
        isAdmin()
      );

      // Create - any authenticated user can create a ticket
      allow create: if isAuthenticated() &&
        request.resource.data.submitterId == request.auth.uid;

      // Update - submitter can update their own (limited), support/admin can update all
      allow update: if isAuthenticated() && (
        resource.data.submitterId == request.auth.uid ||
        isSupport() ||
        isAdmin()
      );

      // Delete - only admin can delete tickets
      allow delete: if isAdmin();

      // Ticket messages subcollection
      match /messages/{messageId} {
        // Read - submitter can see non-internal messages, support/admin can see all
        allow read: if isAuthenticated() && (
          // Support/admin can read all messages including internal notes
          isSupport() ||
          isAdmin() ||
          // Submitter can only read non-internal messages
          (get(/databases/$(database)/documents/tickets/$(ticketId)).data.submitterId == request.auth.uid &&
           resource.data.isInternal == false)
        );

        // Create - submitter or support/admin can add messages
        allow create: if isAuthenticated() && (
          get(/databases/$(database)/documents/tickets/$(ticketId)).data.submitterId == request.auth.uid ||
          isSupport() ||
          isAdmin()
        ) && (
          // Submitter cannot create internal notes
          (get(/databases/$(database)/documents/tickets/$(ticketId)).data.submitterId == request.auth.uid &&
           request.resource.data.isInternal == false) ||
          isSupport() ||
          isAdmin()
        );

        // Update - only message sender or admin can edit
        allow update: if isAuthenticated() && (
          resource.data.senderId == request.auth.uid ||
          isAdmin()
        );

        // Delete - only admin can delete messages
        allow delete: if isAdmin();
      }
    }

    // ============================================================================
    // Access Control Collections (Vet & Buyer Portals)
    // ============================================================================

    // Vet authorizations - breeder grants vet access to specific dogs
    match /vetAuthorizations/{authId} {
      // Read - vet can see their authorizations, breeder can see authorizations they granted
      allow read: if isAuthenticated() && (
        resource.data.vetUserId == request.auth.uid ||
        resource.data.breederId == request.auth.uid ||
        isAdmin()
      );

      // Create - only breeder can grant vet access
      allow create: if isAuthenticated() &&
        request.resource.data.breederId == request.auth.uid;

      // Update - only breeder can modify (e.g., revoke, extend)
      allow update: if isAuthenticated() &&
        resource.data.breederId == request.auth.uid;

      // Delete - only breeder or admin can delete
      allow delete: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        isAdmin()
      );
    }

    // Buyer access - breeder grants buyer access to their puppy records
    match /buyerAccess/{accessId} {
      // Read - buyer can see their access, breeder can see access they granted
      allow read: if isAuthenticated() && (
        resource.data.buyerUserId == request.auth.uid ||
        resource.data.breederId == request.auth.uid ||
        isAdmin()
      );

      // Create - only breeder can grant buyer access
      allow create: if isAuthenticated() &&
        request.resource.data.breederId == request.auth.uid;

      // Update - only breeder can modify
      allow update: if isAuthenticated() &&
        resource.data.breederId == request.auth.uid;

      // Delete - only breeder or admin can delete
      allow delete: if isAuthenticated() && (
        resource.data.breederId == request.auth.uid ||
        isAdmin()
      );
    }

    // ============================================================================
    // SignNow Contract Management Collections
    // ============================================================================

    // Contracts - breeders can manage their own contracts, admins can view all
    // Staff with contract permissions can also access
    match /contracts/{contractId} {
      // List - authenticated users can list (query filters by userId)
      allow list: if isAuthenticated();

      // Get - owner can read their own contracts, admins can read all
      // Staff with canViewContracts permission can also read
      allow get: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin() ||
        hasStaffPermission(resource.data.userId, 'canViewContracts')
      );

      // Create - breeder must be the owner, or staff with canCreateContracts
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        hasStaffPermission(request.resource.data.userId, 'canCreateContracts')
      );

      // Update - owner, or staff with canSendContracts
      allow update: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        hasStaffPermission(resource.data.userId, 'canSendContracts')
      );

      // Delete - only owner or admin can delete
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );

      // Signers subcollection - owner or staff with contract permissions
      match /signers/{signerId} {
        allow read: if isAuthenticated() && (
          get(/databases/$(database)/documents/contracts/$(contractId)).data.userId == request.auth.uid ||
          hasStaffPermission(get(/databases/$(database)/documents/contracts/$(contractId)).data.userId, 'canViewContracts')
        );
        allow write: if isAuthenticated() && (
          get(/databases/$(database)/documents/contracts/$(contractId)).data.userId == request.auth.uid ||
          hasStaffPermission(get(/databases/$(database)/documents/contracts/$(contractId)).data.userId, 'canSendContracts')
        );
      }

      // Audit events subcollection - read only for owner, write only via cloud functions
      match /auditEvents/{eventId} {
        allow read: if isAuthenticated() && (
          get(/databases/$(database)/documents/contracts/$(contractId)).data.userId == request.auth.uid ||
          isAdmin() ||
          hasStaffPermission(get(/databases/$(database)/documents/contracts/$(contractId)).data.userId, 'canViewContracts')
        );
        allow write: if false; // Only cloud functions can write audit events
      }
    }

    // Contract templates in breeder profiles
    // Staff with contract permissions can also access
    match /breederProfiles/{userId}/contractTemplates/{templateId} {
      allow read: if isAuthenticated() && (
        userId == request.auth.uid ||
        hasStaffPermission(userId, 'canViewContracts')
      );
      allow create: if isAuthenticated() && (
        userId == request.auth.uid ||
        hasStaffPermission(userId, 'canCreateContracts')
      );
      allow update: if isAuthenticated() && (
        userId == request.auth.uid ||
        hasStaffPermission(userId, 'canCreateContracts')
      );
      allow delete: if isAuthenticated() && userId == request.auth.uid;
    }

    // SignNow webhook events - admin only read, cloud functions write
    match /signNowWebhookEvents/{eventId} {
      allow read: if isAdmin();
      allow write: if false; // Only cloud functions can write
    }

    // SignNow download queue - admin only read, cloud functions write
    match /signNowDownloadQueue/{queueId} {
      allow read: if isAdmin();
      allow write: if false; // Only cloud functions can write
    }

    // ============================================================================
    // Collection Group Rules (for cross-collection queries)
    // ============================================================================

    // Evaluations collection group - allows querying across all puppy evaluations
    match /{path=**}/evaluations/{evaluationId} {
      allow read: if isAuthenticated() && (isAdmin() || resource.data.userId == request.auth.uid);
    }
  }
}
